<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Black -->
    <font
        app:font="@font/nunito_extralight"
        app:fontStyle="normal"
        app:fontWeight="200" />

    <font
        app:font="@font/nunito_extralightitalic"
        app:fontStyle="italic"
        app:fontWeight="200" />

    <!-- Light -->
    <font
        app:font="@font/nunito_light"
        app:fontStyle="normal"
        app:fontWeight="300" />

    <font
        app:font="@font/nunito_lightitalic"
        app:fontStyle="italic"
        app:fontWeight="300" />

    <!-- Regular -->
    <font
        app:font="@font/nunito_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- Medium -->
    <font
        app:font="@font/nunito_medium"
        app:fontStyle="normal"
        app:fontWeight="500" />

    <font
        app:font="@font/nunito_mediumitalic"
        app:fontStyle="italic"
        app:fontWeight="500" />

    <!-- Semi-Bold -->
    <font
        app:font="@font/nunito_semibold"
        app:fontStyle="italic"
        app:fontWeight="600" />

    <font
        app:font="@font/nunito_semibolditalic"
        app:fontStyle="italic"
        app:fontWeight="600" />

    <!-- Bold -->
    <font
        app:font="@font/nunito_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />

    <font
        app:font="@font/nunito_bolditalic"
        app:fontStyle="normal"
        app:fontWeight="700" />

    <!-- Extra Bold -->
    <font
        app:font="@font/nunito_extrabold"
        app:fontStyle="normal"
        app:fontWeight="800" />

    <font
        app:font="@font/nunito_extrabolditalic"
        app:fontStyle="italic"
        app:fontWeight="800" />

    <!-- Black -->
    <font
        app:font="@font/nunito_black"
        app:fontStyle="normal"
        app:fontWeight="900" />

    <font
        app:font="@font/nunito_blackitalic"
        app:fontStyle="italic"
        app:fontWeight="900" />
</font-family>