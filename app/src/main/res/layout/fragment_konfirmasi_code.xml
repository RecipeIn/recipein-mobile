<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.konfirmasicode.KonfirmasiCodeFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/todo"
        android:scaleType="centerCrop"
        android:src="@drawable/img_background1"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-243dp" />

    <com.google.android.material.card.MaterialCardView
        style="@style/RecipeInMobile.CardView.Top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/white"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintBottom_toBottomOf="@+id/imageView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="@string/verifikasi"
                android:textSize="@dimen/heading3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_sign_up_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verif_desc"
                android:textSize="@dimen/body3"
                android:fontFamily="@font/nunito_regular"
                app:layout_constraintStart_toStartOf="@+id/tv_sign_up"
                app:layout_constraintTop_toBottomOf="@+id/tv_sign_up" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/verif_code"
                android:textSize="@dimen/heading4"
                android:labelFor="@id/et_username"
                app:layout_constraintStart_toStartOf="@+id/tv_sign_up_desc"
                app:layout_constraintTop_toBottomOf="@+id/tv_sign_up_desc" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_username_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="4dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_username"
                tools:layout_editor_absoluteX="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_edittext"
                    tools:ignore="VisualLintTextFieldSize" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/repeat_verif"
                android:textColor="@color/secondary50"
                android:textSize="@dimen/heading5"
                app:layout_constraintStart_toStartOf="@+id/et_username_layout"
                app:layout_constraintTop_toBottomOf="@+id/et_username_layout" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="56dp"
                android:fontFamily="@font/nunito_bold"
                android:paddingVertical="12dp"
                android:text="@string/kirim"
                android:textColor="@color/neutral90"
                android:textSize="@dimen/subheading"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/et_username_layout"
                tools:ignore="VisualLintButtonSize,DuplicateSpeakableTextCheck"
                tools:layout_editor_absoluteX="24dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>