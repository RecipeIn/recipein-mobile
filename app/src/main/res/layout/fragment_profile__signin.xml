<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.profile_signin.Profile_SigninFragment">

    <TextView
        android:id="@+id/tvprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/profile"
        android:textSize="@dimen/heading3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:backgroundTintMode="screen"
        android:src="@drawable/ic_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvprofile"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/profil_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvprofile" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="@string/nama"
        android:textSize="@dimen/heading3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvprofile" />

    <ImageView
        android:id="@+id/btnEdit_Setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTintMode="screen"
        android:src="@drawable/ic_edit_profile"
        app:layout_constraintBottom_toTopOf="@+id/tvprofile_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toEndOf="@+id/tvUsername" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/tvprofile_desc"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvUsername"
        app:strokeColor="@color/primary50"
        app:strokeWidth="4dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvProfileDesc"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/nunito_regular"
        android:text="@string/profile_desc"
        android:textAlignment="center"
        android:textSize="@dimen/body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvprofile_desc" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnResepku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/primary10"
        android:fontFamily="@font/nunito_bold"
        android:paddingVertical="12dp"
        android:text="@string/resepku"
        android:textAlignment="textStart"
        android:textColor="@color/neutral90"
        android:textSize="@dimen/subheading"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvprofile_desc"
        tools:ignore="VisualLintButtonSize,DuplicateSpeakableTextCheck"
        tools:layout_editor_absoluteX="24dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_next_bbutton"
        app:layout_constraintEnd_toEndOf="@+id/btnResepku"
        tools:layout_editor_absoluteY="404dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNutrisiku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/primary10"
        android:fontFamily="@font/nunito_bold"
        android:paddingVertical="12dp"
        android:text="@string/nuttrisiku"
        android:textAlignment="textStart"
        android:textColor="@color/neutral90"
        android:textSize="@dimen/subheading"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnResepku"
        tools:ignore="VisualLintButtonSize,DuplicateSpeakableTextCheck"
        tools:layout_editor_absoluteX="24dp" />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnNextNutrisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_next_bbutton"
        app:layout_constraintEnd_toEndOf="@+id/btnNutrisiku"
        tools:layout_editor_absoluteY="466dp" />

    <TextView
        android:id="@+id/tvnutrisiHarian"
        android:layout_width="360dp"
        android:layout_height="168dp"
        android:background="@drawable/nutrisi_background"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/nutrisi"
        android:textAlignment="center"
        android:textColor="@color/secondary90"
        android:textSize="@dimen/subheading"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="520dp" />

    <TextView
        android:id="@+id/tvKal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/kalori"
        android:textColor="@color/secondary90"
        android:textSize="@dimen/heading4"
        app:layout_constraintStart_toStartOf="@+id/tvnutrisiHarian"
        tools:layout_editor_absoluteY="557dp" />

    <TextView
        android:id="@+id/tvkar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/karbo"
        android:textColor="@color/secondary90"
        android:textSize="@dimen/heading4"
        app:layout_constraintStart_toStartOf="@+id/tvnutrisiHarian"
        app:layout_constraintTop_toBottomOf="@+id/tvKal" />

    <TextView
        android:id="@+id/tvSer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/serat"
        android:textColor="@color/secondary90"
        android:textSize="@dimen/heading4"
        app:layout_constraintStart_toStartOf="@+id/tvnutrisiHarian"
        app:layout_constraintTop_toBottomOf="@+id/tvkar" />

    <TextView
        android:id="@+id/tvJlhkal"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_marginStart="92dp"
        android:background="@drawable/white_background"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center"
        android:text="200 Kkal"
        android:textColor="@color/secondary90"
        android:textSize="@dimen/caption"
        app:layout_constraintStart_toStartOf="@+id/tvnutrisiHarian"
        app:layout_constraintTop_toTopOf="@+id/tvKal" />

    <TextView
        android:id="@+id/tvJlhkar"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/white_background"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center"
        android:text="100g"
        android:textColor="@color/secondary90"
        android:textSize="@dimen/caption"
        app:layout_constraintStart_toEndOf="@+id/tvkar"
        app:layout_constraintTop_toBottomOf="@+id/tvJlhkal" />

    <TextView
        android:id="@+id/tvJlhserat"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/white_background"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center"
        android:text="10g"
        android:textColor="@color/secondary90"
        android:textSize="@dimen/caption"
        app:layout_constraintTop_toBottomOf="@+id/tvJlhkar"
        tools:layout_editor_absoluteX="115dp" />

    <TextView
        android:id="@+id/tvpro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/protein"
        android:textColor="@color/secondary90"
        android:textSize="@dimen/heading4"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="557dp" />

    <TextView
        android:id="@+id/tvVit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/vitamin"
        android:textColor="@color/secondary90"
        android:textSize="@dimen/heading4"
        app:layout_constraintStart_toEndOf="@+id/tvJlhkar"
        app:layout_constraintTop_toBottomOf="@+id/tvpro" />

    <TextView
        android:id="@+id/tvlemak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/lemak"
        android:textColor="@color/secondary90"
        android:textSize="@dimen/heading4"
        app:layout_constraintStart_toEndOf="@+id/tvJlhserat"
        app:layout_constraintTop_toBottomOf="@+id/tvVit" />

    <TextView
        android:id="@+id/tvJlhlemak"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:background="@drawable/white_background"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center"
        android:text="10g"
        android:textColor="@color/secondary90"
        android:textSize="@dimen/caption"
        tools:layout_editor_absoluteX="299dp"
        tools:layout_editor_absoluteY="640dp" />

    <TextView
        android:id="@+id/tvJlhvit"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:background="@drawable/white_background"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center"
        android:text="10g"
        android:textColor="@color/secondary90"
        android:textSize="@dimen/caption"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="597dp" />

    <TextView
        android:id="@+id/tvJlhlemak"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:background="@drawable/white_background"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center"
        android:text="10g"
        android:textColor="@color/secondary90"
        android:textSize="@dimen/caption"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="557dp" />


</androidx.constraintlayout.widget.ConstraintLayout>